

<div class="header">
  <div class="container">
    <div class="row">
      <h2 class="col-xs-10 offer-heading">Offers</h2>
      <% if current_user %>
      <div class="col-xs-2 new-offer">
      <%= link_to "Create Offer", new_offer_path, class: "pull-right btn-primary btn" %>
      </div>
      <% end %>

    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @offers.each do |offer| %>
      <div class="col-md-3">
        <%= link_to(offer) do %>
          <div class="thumbnail offer">
            <p><%= offer.description %></p>
            <%= image_tag offer.image, class: "img-responsive", style: "max-height:180px", alt: "" %>
            <p>
              Offered by <%= offer.user.first_name%>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
