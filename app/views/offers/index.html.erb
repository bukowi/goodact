

<div class="container">
  <h2 class="offer-heading">Offers</h2>
  <div class="row">
    <% @offers.each do |offer| %>
      <div class="col-md-3">
        <%= link_to(offer) do %>
          <div class="thumbnail offer">
            <p><%= offer.description %></p>
            <img src="<%= offer.image%>" alt="" />
            <p>
              Offered by <%= offer.user.first_name%>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
