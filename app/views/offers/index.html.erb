<div class="container">
  <h2 class="offer-heading">Offers</h2>
  <div class="row">
    <% if @offers.empty? then%>
    <p>
      Corrently has no offers
    </p>
    <%end%>

    <% @offers.each do |offer| %>
      <div class="col-xs-3">
        <%= link_to(offer) do %>
          <div class="thumbnail offer">
            <p><%= offer.description %></p>
            <img src="<%= offer.image%>" alt="" />
            <p>
              Offered by <%= offer.user.name%>
            </p>
          </div>
          <% end %>
      </div>
    <% end %>

  </div>
</div>

