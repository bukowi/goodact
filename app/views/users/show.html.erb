
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="thumbnail">
          <%= image_tag @user.image %>
        </div>
      </div>
      <div class="col-md-6">
        <h2><%= @user.first_name%> <%= @user.last_name %></h2>
        <% if current_user && (current_user == @user) %>
          <p class="user-edit">
            <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-primary" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Offers</h2>
      <% @user.offers.each do |offer| %>
      <p><%= offer.description %> <%= link_to "Show", offer , class: "btn"%></p>
      <%end%>
    </div>
    <div class="col-md-6">
      <h2>Searches</h2>
      <% @user.searches.each do |search| %>
      <p><%= search.description %> </p>
      <%end%>
    </div>
  </div>
</div>
